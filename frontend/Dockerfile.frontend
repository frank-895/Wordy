FROM node:20-slim

WORKDIR /app

# Install pnpm globally
RUN npm install -g pnpm@10.11.0

# Copy package files and install dependencies
COPY package.json pnpm-lock.yaml ./
RUN pnpm install

# Copy source code
COPY . .

EXPOSE 3000

# Start development server
CMD ["pnpm", "run", "dev", "--host", "0.0.0.0"] 